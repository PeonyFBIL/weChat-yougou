.first_tab .good_item {
  display: flex;
  border-bottom: 1px solid #ccc;
}
.first_tab .good_item .good_img_wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.first_tab .good_item .good_img_wrap image {
  width: 70%;
}
.first_tab .good_item .good_info {
  flex: 3;
  height: 100%;
}
.first_tab .good_item .good_info .good_info_name {
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  line-height: 150%;
}
.first_tab .good_item .good_info .good_info_price {
  color: var(--themeColor);
  font-size: 32rpx;
  margin-top: 20rpx;
}
